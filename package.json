{
  "name": "create-ndcf-app",
  "version": "0.1.1",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ndcf-app": "dist/index.js",
    "create-ndcf-app": "dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    ".yarnrc.yml",
    "package.json"
  ],
  "scripts": {
    "dev": "vitest",
    "lint": "tsc",
    "test": "vitest run",
    "build": "tsup src/index.ts --format esm --clean",
    "start": "node dist/index.js",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "release": "pnpm run ci && changeset publish",
    "link": "(pnpm unlink --global || true) && pnpm link --global",
    "clean": "rm -rf dist node_modules && pnpm unlink --global"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Suman-JS/create-ndcf-app.git"
  },
  "keywords": [
    "ndcf",
    "next",
    "sap",
    "btp",
    "cloud",
    "foundry",
    "docker",
    "tailwind",
    "ui",
    "shadcn",
    "cf",
    "app-router",
    "pages-router",
    "cloud-foundry",
    "shadcn/ui"
  ],
  "license": "MIT",
  "description": "A CLI tool to create a Next.js 14 boilerplate app with Docker configuration, ready to be pushed to SAP BTP Cloud Foundry.",
  "bugs": {
    "url": "https://github.com/Suman-JS/create-ndcf-app/issues",
    "homepage": "https://github.com/Suman-JS/create-ndcf-app#readme"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "eslint": "^9.6.0",
    "figlet": "^1.7.0",
    "fs-extra": "^11.1.1",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.23",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.9",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
